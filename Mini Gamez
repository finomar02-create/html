<script>
function checkQuiz() {
    const answers = {
        q1:"b", q2:"b", q3:"b", q4:"b", q5:"c",
        q6:"a", q7:"c", q8:"b", q9:"b", q10:"a",
        q11:"a", q12:"b", q13:"a", q14:"b", q15:"b",
        q16:"b", q17:"b", q18:"c", q19:"c", q20:"a",
        q21:"b", q22:"a", q23:"a", q24:"b", q25:"a"
    };

    let score = 0;
    for (let key in answers) {
        let selected = document.querySelector(`input[name="${key}"]:checked`);
        if (selected && selected.value === answers[key]) score++;
    }

    document.getElementById("result").innerHTML =
        "Skor Akhir: " + score + " / 25";
}
</script>

