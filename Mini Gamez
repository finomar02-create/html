let index = 0;
let score = 0;
let timeLeft = 20;
let timer;

function startGame() {
    index = 0;
    score = 0;
    document.getElementById("score").innerHTML = "";
    loadQuestion();
}

function loadQuestion() {
    if (index >= quizData.length) {
        document.getElementById("question").innerHTML = "ðŸŽ‰ Kamu Menyelesaikan Game!";
        document.getElementById("options").innerHTML = "";
        document.getElementById("score").innerHTML = "Total Skor: " + score + "/25";
        clearInterval(timer);
        return;
    }

    let q = quizData[index];
    document.getElementById("question").innerHTML = (index+1) + ". " + q.q;

    let optionsHTML = "";
    q.o.forEach((op, i) => {
        optionsHTML += `<div class='option' onclick='checkAnswer(${i})'>${op}</div>`;
    });
    document.getElementById("options").innerHTML = optionsHTML;

    resetTimer();
}

function checkAnswer(selected) {
    if (selected === quizData[index].a) score++;
    index++;
    loadQuestion();
}

function resetTimer() {
    clearInterval(timer);
    timeLeft = 20;
    document.getElementById("timer").innerHTML = "Waktu: " + timeLeft;
    
    timer = setInterval(() => {
        timeLeft--;
        document.getElementById("timer").innerHTML = "Waktu: " + timeLeft;

        if (timeLeft <= 0) {
            index++;
            loadQuestion();
        }
    }, 1000);
}
